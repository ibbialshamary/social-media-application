{
  "name": "social_media_application",
  "version": "1.0.0",
  "description": "Social Media Application using Vue.js, Node.js, MongoDB and Express",
  "main": "app.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node app.js",
    "server": "nodemon server/NodeServer.js",
    "chatServer": "nodemon server/ChatServer.js",
    "client": "npm run serve --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run chatServer\" \"npm run client\""
  },
  "author": "Ibbi",
  "license": "N/A",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@fortawesome/vue-fontawesome": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.9",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "socket.io": "^3.0.3"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "multer": "^1.4.2"
  }
}
